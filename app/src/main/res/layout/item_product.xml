<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/item_filter_bg"

    android:paddingBottom="10dp">



        <com.facebook.drawee.view.SimpleDraweeView
            android:background="@drawable/item_filter_bg"
            android:id="@+id/productIv"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="12dp"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:layout_marginTop="10dp"

            android:textColor="?colorOnSurface"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/productIv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/productIv"
            tools:text="TextView" />


        <TextView
            android:id="@+id/city_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:text="مرکزی، محلات"
            android:textColor="@color/md_blue_grey_400"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/productIv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_tv" />

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/item_filter_bg"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city_tv">


            <TextView
                android:layout_marginRight="5dp"

                android:id="@+id/rahn_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                tools:drawableBottom="@drawable/no"

                android:text="رهن\n "
                android:textSize="10sp" />

            <View
                android:layout_marginRight="5dp"

                android:layout_width="1dp"
                android:layout_height="70dp"
                android:background="@color/md_green_200" />

            <TextView
                android:layout_marginRight="5dp"

                android:id="@+id/ejare_tv"
                tools:drawableBottom="@drawable/no"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="اجاره\n\n "
                android:textSize="10sp" />

            <View
                android:layout_marginRight="5dp"

                android:layout_width="1dp"
                android:layout_height="70dp"
                android:background="@color/md_green_200" />

            <TextView
                android:id="@+id/vadie_tv"
                tools:drawableBottom="@drawable/no"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ودیعه\n\n "
                android:textSize="10sp" />
        </TableRow>


    </androidx.constraintlayout.widget.ConstraintLayout>

